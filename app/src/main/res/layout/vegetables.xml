<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/secondfon"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vegImgs"
            android:layout_width="275dp"
            android:layout_height="425dp"
            android:layout_marginLeft="60dp"

            android:layout_marginTop="55dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/pepper" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back1" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="110dp"
            app:srcCompat="@drawable/next" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vegNames"
            android:layout_width="220dp"
            android:text ="@string/pepper"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/animal_text_button"
            android:layout_height="50dp"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="550dp"

            android:gravity="center_horizontal"
            app:srcCompat="@drawable/word1" />

    </LinearLayout>


</RelativeLayout>