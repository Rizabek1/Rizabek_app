<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/secondfon" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_stroke_black_press_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack95"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_professionImg"
                android:layout_marginTop="30dp"
                android:layout_width="220dp"
                android:layout_height="200dp"

                app:srcCompat="@drawable/businessman" />

            <ImageView
                android:id="@+id/main_foodImg"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:layout_height="220dp"

                android:paddingRight="21dp"
                android:paddingLeft="13dp"
                app:srcCompat="@drawable/sandwich" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/professiontext"
                android:layout_marginLeft="10dp"

                />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="107dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/foodtext" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_familyImg"
                    android:layout_width="260dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/fam"

                    />

                <ImageView
                    android:id="@+id/myTiger"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"



                    android:src="@drawable/tiger1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"


                    app:srcCompat="@drawable/famtext"
                    android:layout_marginLeft="10dp"

                />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"


                    app:srcCompat="@drawable/animaltext"
                    android:layout_marginLeft="10dp"

                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>