<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/secondfon" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_stroke_black_press_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack95"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_fruitImg"
                android:layout_width="185dp"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/fruitsbasket" />

            <ImageView
                android:id="@+id/main_vegImg"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/vegsbasket" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/fruitstext"
                android:layout_marginLeft="15dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/vegstext"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_Sandwich"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="100dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sandwich" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/eatintext"
                    android:layout_marginLeft="90dp"/>/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>