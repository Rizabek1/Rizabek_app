<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="1600dp"
        android:layout_height="2560dp"
        android:layout_marginBottom="75dp"
        app:srcCompat="@drawable/secondfonlarge" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/animalImg"
            android:layout_width="540dp"
            android:layout_height="800dp"
            android:layout_marginLeft="110dp"

            android:layout_marginTop="90dp"

            app:srcCompat="@drawable/bear" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/animalName"
            android:layout_width="320dp"
            android:layout_height="60dp"

            android:layout_marginTop="900dp"
            android:background="@drawable/animal_text_button"
            android:gravity="center_horizontal"
            android:layout_marginLeft="250dp"


            android:text="@string/bear"

            android:textColor="@color/colorWhite"
            android:textSize="40sp"

            android:textStyle="bold"
            app:srcCompat="@drawable/word1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="1010dp"
            android:layout_marginLeft="80dp"
            app:srcCompat="@drawable/back1" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="1010dp"
            android:layout_marginLeft="360dp"
            app:srcCompat="@drawable/next" />


    </LinearLayout>


</RelativeLayout>