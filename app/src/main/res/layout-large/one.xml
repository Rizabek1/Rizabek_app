<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/secondfon"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/numImg"
            android:layout_width="wrap_content"
            android:layout_height="750dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"

            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/num1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="180sp"
            android:layout_height="130sp"
            android:layout_marginTop="1040dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/back1" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="180sp"
            android:layout_height="130sp"
            android:layout_marginTop="1040dp"
            android:layout_marginLeft="370dp"
            app:srcCompat="@drawable/next" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/numName"
            android:layout_width="340dp"

            android:layout_height="65dp"

            android:layout_marginLeft="260dp"
            android:layout_marginTop="930dp"

            android:gravity="center_horizontal"
            app:srcCompat="@drawable/word1" />

    </LinearLayout>


</RelativeLayout>