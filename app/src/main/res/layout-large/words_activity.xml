<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/secondFon"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/secondfon" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_back"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_stroke_black_press_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack95"
            android:textSize="24sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_professionImg"
                android:layout_marginTop="117dp"
                android:layout_width="400dp"
                android:layout_height="400dp"

                app:srcCompat="@drawable/businessman" />

            <ImageView
                android:id="@+id/main_foodImg"
                android:layout_width="400dp"
                android:layout_height="350dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"

                android:paddingLeft="13dp"
                android:paddingRight="21dp"

                app:srcCompat="@drawable/sandwich" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profession"
                android:layout_marginLeft="10dp"
                android:textSize="35sp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/food"
                android:layout_marginLeft="30dp"
                android:textSize="35sp"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_familyImg"
                    android:layout_width="350dp"
                    android:layout_height="410dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"

                    app:srcCompat="@drawable/fam"
                    android:paddingRight="21dp"


                    />

                <ImageView

                    android:id="@+id/myTiger"
                    android:layout_width="255dp"
                    android:layout_height="290dp"
                    android:layout_weight="1"
                    android:layout_marginTop="70dp"



                    android:src="@drawable/tiger1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/family"
                    android:layout_marginLeft="40dp"
                    android:textSize="35sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/animals"
                    android:layout_marginLeft="10dp"
                    android:textSize="35sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>